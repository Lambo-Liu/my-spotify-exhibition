    <script>
      function animateText() {
        let title1Wrapper = document.querySelector(".title-1");
        title1Wrapper.innerHTML = title1Wrapper.textContent.replace(/\S/g, "<div class='letter'>$&</div>");

        let title2Wrapper = document.querySelector(".title-2");
        title2Wrapper.innerHTML = title2Wrapper.textContent.replace(/\S/g, "<div class='letter'>$&</div>");

        anime.timeline()
        .add({
          targets: ".title-1 .letter",
          translateY : [40,0],
          translateZ: 0,
          opacity: [0,1],
          easing: "easeOutExpo",
          duration: 1200,
          delay: anime.stagger(50, {start: 2200})
        })

        anime.timeline()
        .add({
          targets: ".title-2 .letter",
          translateY: [40,0],
          translateZ: 0,
          opacity: [0,1],
          easing: "easeOutExpo",
          duration: 1200,
          delay: anime.stagger(50, {start: 2500})
        })

        setTimeout(function() {
          let title1 = document.querySelector(".title-1");
          let title2 = document.querySelector(".title-2");
          let title = document.querySelector(".title");
          title1.innerHTML = "<span data-content='My Spotify' aria-hidden='true'></span>My Spotify";
          title2.innerHTML = "<span data-content='Exhibition' aria-hidden='true'></span>Exhibition";
        }, 3700);
      }

      function animateCover() {
        let cover = document.querySelector(".cover");
        let title = document.querySelector(".title");
        let circles = document.querySelector(".circles");
        let arrows = document.querySelector(".arrows");
        let scrollText = document.querySelector(".scroll-text");

        cover.classList.add("cover-animate");
        circles.classList.add("circles-animate");
        setTimeout(function() {
          circles.remove();
        }, 2000);
        setTimeout(function() {
          title.classList.add("title-animate");
          setTimeout(function() {
            title.className = "title-new";
            title.innerHTML = "<div class='title-1'>My Spotify</div> <div class='title-2'>Exhibition</div> <div class='subtitle hidden'>An Immersive Experience, For You Only.</div>";
            setTimeout(function() {
              title.classList.add("title-shrink");
              let subtitle = document.querySelector(".subtitle");
              setTimeout(function() {
                subtitle.classList.remove("hidden");
                setTimeout(function() {
                  arrows.classList.remove("hidden");
                  scrollText.classList.remove("hidden");
                }, 2000);
              }, 1000);
            }, 300);
          }, 1000);
        }, 1000);
      }

      function getOffset(el) {
        const rect = el.getBoundingClientRect();
        return {
          left: rect.left + window.scrollX,
          top: rect.top + window.scrollY
        };
      }

      function shiftAlbumPerspective(e, i) {
        let albums = document.querySelectorAll(".album-inner");

        console.log(e.clientX + " " + e.clientY);
        albums[i].style.transform = "rotateY(" + ((e.clientX - (albums[i].parentElement.offsetLeft + (albums[i].parentElement.offsetWidth / 2))) / albums[i].offsetWidth / 0.5) +
        "deg) rotateX(" + (-(e.clientY - (albums[i].parentElement.offsetTop + (albums[i].parentElement.offsetHeight / 2))) / albums[i].offsetHeight / 0.5) + "deg)";
      }

      function resetPerspective(i) {
        let albums = document.querySelectorAll(".album-inner");

        albums[i].style.transform = "none";
      }

      function driftAlbums() {
        let albums = document.querySelectorAll(".album");
        let startText = document.querySelector(".start-text");

        for (let i = 0; i < albums.length; i++) {
          albums[i].classList.add("album-after");
        }

        setTimeout(function() {
          startText.classList.remove("hidden");
        }, 1200);
      }

      function initAlbums() {
        let main = document.querySelector(".main");

        let albums = document.querySelectorAll(".album");
        const maxWidth = 28;
        const minWidth = 24;
        const maxTime = 2.5;
        const minTime = 0.5;
        const maxDelay = 0.2;
        const minDelay = 0.15;

        for (let i = 0; i < albums.length; i++) {
          albums[i].addEventListener("mousemove", function(e) {
            shiftAlbumPerspective(e, i);
          });

          albums[i].addEventListener("mouseleave", function(e) {
            resetPerspective(i);
          });

          albums[i].classList.remove("hidden");

          let randDimensions = Math.random() * (maxWidth - minWidth) + minWidth;
          albums[i].style.width = "calc(" + randDimensions + "px + 8vw + 5vh)";
          albums[i].style.height = "calc(" + randDimensions + "px + 8vw + 5vh)";

          let randTransitionDuration = Math.random() * (maxTime - minTime) + minTime;
          let randTransitionDelay = Math.random() * (maxDelay - minDelay) + minDelay;
          albums[i].style.transition = "opacity " + randTransitionDuration + "s " + (randTransitionDelay * i) + "s ease, left 1s ease, right 1s ease, top 1s ease, height 1s ease, width 1s ease";

          albums[i].style.setProperty("--animate-delay", (randTransitionDelay * i) + "s");
          albums[i].style.setProperty("--animate-duration", (Math.random() * (5 - 4) + 4) + "s");
        }

        setTimeout(driftAlbums, 4800);
      }

      function animateAlbums(scrollPos) {
        if (scrollPos >= window.innerHeight - 200) {
          window.removeEventListener("scroll", onScroll);
          initAlbums();
        }
      }

      function onScroll() {
        let scrollPos = 0;
        let ticking = false;
        scrollPos = window.scrollY;

        if (!ticking) {
          window.requestAnimationFrame(function() {
            animateAlbums(scrollPos);
            ticking = false;
          });

          ticking = true;
        }
      }

      window.addEventListener("DOMContentLoaded", (event) => {
        window.addEventListener("scroll", onScroll);
        animateText();
        setTimeout(function() {
          animateCover();
        }, 5000);
      });
    </script>
