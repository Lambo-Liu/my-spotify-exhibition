<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>My Spotify Exhibition</title>
    <link rel="stylesheet" href="/css/bootstrap-grid.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/home.css">
    <script src="/js/anime.min.js"></script>
  </head>
  <body>
    <section class="bg-dark">
      <div class="cover"></div>
      <div class="w-100 h-100 d-flex align-items-center justify-content-center">
        <div class="circles w-100 h-100 d-flex align-items-center justify-content-center">
          <div class="circle" style="animation-delay: 0s"></div>
          <div class="circle" style="animation-delay: 1.25s"></div>
          <div class="circle" style="animation-delay: 2.5s"></div>
          <div class="circle" style="animation-delay: 3.75s"></div>
        </div>
        <div class="title">
          <div class="title-1">My Spotify</div>
          <div class="title-2">Exhibition</div>
          <div class='subtitle hidden'>An Immersive Experience, For You Only.</div>
        </div>
        <div class="arrows w-100 d-flex align-items-center justify-content-center hidden">
          <div class="chevron"></div>
          <div class="chevron"></div>
          <div class="chevron"></div>
        </div>
        <div class="scroll-text hidden"> Scroll to start ... </div>
      </div>
    </section>
    <section class="bg-light shadow-top">
      <div class="w-100 h-100 d-flex flex-column align-items-center justify-content-center">
        <h1 class="welcome">Welcome</h1>
        <small class="welcome-subtitle">to your own Spotify replay experience.</small>
        <button class="login-btn" type="button" name="login">Get Started</button>
      </div>
    </section>

    <script>
      function animateText() {
        let title1Wrapper = document.querySelector(".title-1");
        title1Wrapper.innerHTML = title1Wrapper.textContent.replace(/\S/g, "<div class='letter'>$&</div>");

        let title2Wrapper = document.querySelector(".title-2");
        title2Wrapper.innerHTML = title2Wrapper.textContent.replace(/\S/g, "<div class='letter'>$&</div>");

        anime.timeline()
        .add({
          targets: ".title-1 .letter",
          translateY : [40,0],
          translateZ: 0,
          opacity: [0,1],
          easing: "easeOutExpo",
          duration: 1200,
          delay: anime.stagger(50, {start: 2200})
        })

        anime.timeline()
        .add({
          targets: ".title-2 .letter",
          translateY: [40,0],
          translateZ: 0,
          opacity: [0,1],
          easing: "easeOutExpo",
          duration: 1200,
          delay: anime.stagger(50, {start: 2500})
        })

        setTimeout(function() {
          let title1 = document.querySelector(".title-1");
          let title2 = document.querySelector(".title-2");
          let title = document.querySelector(".title");
          title1.innerHTML = "<span data-content='My Spotify' aria-hidden='true'></span>My Spotify";
          title2.innerHTML = "<span data-content='Exhibition' aria-hidden='true'></span>Exhibition";
        }, 3700);
      }

      function animateCover() {
        let cover = document.querySelector(".cover");
        let title = document.querySelector(".title");
        let circles = document.querySelector(".circles");
        let arrows = document.querySelector(".arrows");
        let scrollText = document.querySelector(".scroll-text");

        cover.classList.add("cover-animate");
        circles.classList.add("circles-animate");
        setTimeout(function() {
          circles.remove();
        }, 2000);
        setTimeout(function() {
          title.classList.add("title-animate");
          setTimeout(function() {
            title.className = "title-new";
            title.innerHTML = "<div class='title-1'>My Spotify</div> <div class='title-2'>Exhibition</div> <div class='subtitle hidden'>An Immersive Experience, For You Only.</div>";
            setTimeout(function() {
              title.classList.add("title-shrink");
              let subtitle = document.querySelector(".subtitle");
              setTimeout(function() {
                subtitle.classList.remove("hidden");
                setTimeout(function() {
                  arrows.classList.remove("hidden");
                  scrollText.classList.remove("hidden");
                }, 2000);
              }, 1000);
            }, 300);
          }, 1000);
        }, 1000);
      }

      animateText();
      setTimeout(function() {
        animateCover();
      }, 5000);
    </script>
  </body>
</html>
