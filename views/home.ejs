<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>My Spotify Exhibition</title>
    <link rel="stylesheet" href="/css/bootstrap-grid.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins" rel="stylesheet">
    <link rel="stylesheet" href="/css/home.css">
    <script src="/js/anime.min.js"></script>
  </head>
  <body>
    <section>
      <div class="cover"></div>
      <div class="w-100 h-100 bg-transparent d-flex align-items-center justify-content-center">
        <div class="circle" style="animation-delay: 0s"></div>
        <div class="circle" style="animation-delay: 1.5s"></div>
        <div class="circle" style="animation-delay: 3s"></div>
        <div class="circle" style="animation-delay: 4.5s"></div>
        <div class="title">
          <div class="title-1">My Spotify</div>
          <div class="title-2">Exhibition</div>
        </div>
      </div>
    </section>
    <section>
      <h1>Section Two</h1>
    </section>

    <script type="text/javascript">
      function animateText() {
        let title1Wrapper = document.querySelector(".title-1");
        title1Wrapper.innerHTML = title1Wrapper.textContent.replace(/\S/g, "<span class='letter'>$&</span>");

        let title2Wrapper = document.querySelector(".title-2");
        title2Wrapper.innerHTML = title2Wrapper.textContent.replace(/\S/g, "<span class='letter'>$&</span>");

        anime.timeline()
        .add({
          targets: ".title-1 .letter",
          translateY : [40,0],
          translateZ: 0,
          opacity: [0,1],
          easing: "easeOutExpo",
          duration: 1200,
          delay: anime.stagger(50, {start: 1200})
        })

        anime.timeline()
        .add({
          targets: ".title-2 .letter",
          translateY: [40,0],
          translateZ: 0,
          opacity: [0,1],
          easing: "easeOutExpo",
          duration: 1200,
          delay: anime.stagger(50, {start: 1500})
        })
      }

      function animateCover() {
        let cover = document.querySelector("cover");
        cover.classList.add("coverAnimate");
      }

      animateText();
      setTimeout(function() {
        animateCover();
      }, 3000);
    </script>
  </body>
</html>
